exit_after_auth = false
pid_file        = "./pidfile"

auto_auth {
  method "approle" {
    mount_path = "auth/approle"
    config = {
      role_id_file_path                   = "/Users/kabu/hashicorp/vault/vault-agent-template-demo/roleid"
      secret_id_file_path                 = "/Users/kabu/hashicorp/vault/vault-agent-template-demo/secretid"
      remove_secret_id_file_after_reading = false
    }
  }

  sink "file" {
    config = {
      path = "/Users/kabu/hashicorp/vault/vault-agent-template-demo/approleToken"
    }
  }
}

cache {
  use_auto_auth_token = true
}

listener "tcp" {
  address     = "127.0.0.1:8007"
  tls_disable = true
}


vault {
  address = "http://127.0.0.1:8200"
}

template {
  source      = "/Users/kabu/hashicorp/vault/vault-agent-template-demo/template.ctmpl"
  destination = "/Users/kabu/hashicorp/vault/vault-agent-template-demo/render.txt"
}